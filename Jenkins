pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        script {
          // Corrected the g++ command
          sh 'g++ -o task5 main/hello.cpp'
          echo 'Build Successful!'
        }
      }
    }
    stage('Test') {
      steps {
        script {
          // Ensure the working directory is set to the correct path
          dir('main') {
            sh './task5'
          }
          echo 'Test Successful!'
        }
      }
    }
    stage('Deploy') {
      steps {
        echo 'Successfully deployed!'
      }
    }
  }
  post {
    failure {
      echo 'Pipeline Failed!'
    }
  }
}
